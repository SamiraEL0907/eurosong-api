datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Artist {
  artist_id Int    @id @default(autoincrement())
  name      String
  songs     Song[]
}

model Song {
  song_id   Int    @id @default(autoincrement())
  name      String
  artist_id Int
  artist    Artist @relation(fields: [artist_id], references: [artist_id])
  votes     Vote[]
}

model Voter {
  voter_id Int    @id @default(autoincrement())
  name     String
  votes    Vote[]
}

model Vote {
  vote_id  Int   @id @default(autoincrement())
  points   Int
  voter_id Int
  song_id  Int
  voter    Voter @relation(fields: [voter_id], references: [voter_id])
  song     Song  @relation(fields: [song_id], references: [song_id])
}
